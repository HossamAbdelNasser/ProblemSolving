class Solution {
public:
    string reverseWords(string s) {

        stringstream ss(s);
        string token;

        vector <string> words;

        while (ss >> token) {

            reverse(token.begin(), token.end());
            words.push_back(token);
        }

        string res = "";

    for (string revWord : words) {

        res += revWord + " ";
    }

        res.pop_back();

        return res;
    }
};
