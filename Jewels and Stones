class Solution {
public:
    int numJewelsInStones(string jewels, string stones) {

        int jewels_count = 0;

        set<char> jewelsSet;

        for (char c : jewels) {
            jewelsSet.insert(c);
        }

        for (int i = 0; i < stones.size(); i++) {
            
            auto it = jewelsSet.find(stones[i]);

            if (it != jewelsSet.end()) {
                jewels_count++;
            }

        }
        
        return jewels_count;
    }
};
